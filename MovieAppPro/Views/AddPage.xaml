<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MovieAppPro.Views.AddPage">
    <ContentPage.Content>
        <StackLayout Padding="20,20">
            <Label Text="Add Movie Title" FontSize="Large" Margin="0,40,0,15" />
            <Border Stroke="Gray" StrokeThickness="1">
                <Entry x:Name="txtTitle" IsTextPredictionEnabled="False"/>
            </Border>
            
            <Label  Text="Add Movie Rating" FontSize="Large" Margin="0,40,0,15"/>
            <Border Stroke="Gray" StrokeThickness="1">
                <Entry x:Name="txtRating" IsTextPredictionEnabled="False"/>
            </Border>
            
            <Button Text="Add Movie" Margin="0,80,0,0" Clicked="SaveMovie_OnClicked"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>